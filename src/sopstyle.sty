\ProvidesPackage{sopstyle}

% Import required packages
\RequirePackage[margin=1in]{geometry}
\RequirePackage{times}
\RequirePackage{setspace}

% Paragraph formatting
\setlength\parskip{6pt}  % Space between paragraphs
\setlength\parindent{0pt}  % Remove automatic indentation for all paragraphs
\linespread{1.2}

% Ensure first paragraph after section title is also indented
\RequirePackage{indentfirst}

% Define a command to manually indent only the first paragraph when sections are hidden
\newcommand{\firstparagraph}{\ifshowsections\else\hspace{1.5em}\fi}

% Define a toggleable section formatting
\newcommand{\sopsection}[1]{%
    \ifshowsections
        \par\vspace{10pt} % Add space before section
        \noindent\textbf{#1} % Make section title bold
        \par\vspace{4pt} % Small space between title and first paragraph
    \fi
}
